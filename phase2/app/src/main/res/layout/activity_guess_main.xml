<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".GuessNum.GuessMain">
    <ImageView
        android:id="@+id/imageView"
        android:layout_width="290dp"
        android:layout_height="93dp"
        android:layout_marginTop="52dp"
        android:contentDescription="@string/guess_number_image"
        android:src="@drawable/guess_picture"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/startBotton"
        android:layout_width="120dp"
        android:layout_height="72dp"
        android:layout_marginTop="44dp"
        android:text="@string/start"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />

    <Button
        android:id="@+id/resumeBtn"
        android:layout_width="112dp"
        android:layout_height="71dp"
        android:layout_marginTop="40dp"
        android:text="Resume"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/startBotton" />

    <Button
        android:id="@+id/quitBtn"
        android:layout_width="112dp"
        android:layout_height="71dp"
        android:layout_marginTop="52dp"
        android:text="Exit Game"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/resumeBtn" />

</androidx.constraintlayout.widget.ConstraintLayout>