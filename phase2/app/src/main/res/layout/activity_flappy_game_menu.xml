<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/lightocean"
    tools:context=".flappyfish.FlappyGameMenu">

    <Button
        android:id="@+id/newGameBtn"
        android:layout_width="115dp"
        android:layout_height="80dp"
        android:layout_marginTop="220dp"
        android:background="@drawable/bubble"
        android:text="New Game"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/resumeGameBtn"
        android:layout_width="115dp"
        android:layout_height="80dp"
        android:layout_marginTop="32dp"
        android:background="@drawable/bubble"
        android:text="Resume Game"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/newGameBtn" />

    <Button
        android:id="@+id/quitGameBtn"
        android:layout_width="115dp"
        android:layout_height="80dp"
        android:layout_marginTop="32dp"
        android:background="@drawable/bubble"
        android:text="Exit Game"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/resumeGameBtn" />

    <Button
        android:id="@+id/stopMusicBtn"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:background="@drawable/volume_off"
        app:layout_constraintBottom_toBottomOf="@+id/playMusicBtn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/playMusicBtn"
        app:layout_constraintTop_toTopOf="@+id/playMusicBtn"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/playMusicBtn"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginTop="140dp"
        android:background="@drawable/volume_on"
        app:layout_constraintEnd_toStartOf="@+id/stopMusicBtn"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>